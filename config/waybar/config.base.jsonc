{
  "layer": "top",
  "position": "bottom",
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "height": 30,
  "reload_style_on_change": true,
  "niri/window": {
    "format": "{}",
    "max-length": 80,
    "rewrite": {
      "": "Harsh",
    },
    "separate-outputs": true,
  },
  "niri/workspaces": {
    "format": "<b>{index}</b> {name}",
    "on-click": "activate",
    "sort-by-number": true,
  },
  "tray": {
    "spacing": 10,
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>",
    "format": "{:%a %b %d %H:%M}",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "",
      "on-scroll": 1,
      "format": {
        "months": "<span color='#a593ea'><b>{}</b></span>",
        "weekdays": "<span color='#ab9de0'>{}</span>",
        "days": "<span color='#dfd9fb'>{}</span>",
        "today": "<span color='#25213B' background='#d2f5ad'><big><b>{}</b></big></span>",
      },
    },
    "on-click": "zsh -c 'niri-tools scratchpad toggle calendar'",
  },
  "idle_inhibitor": {
    "timeout": 60,
    "format": "{icon}",
    "tooltip-format-activated": "Inhibit idle: {status}",
    "tooltip-format-deactivated": "Inhibit idle: {status}",
    "format-icons": {
      "activated": "󰒳",
      "deactivated": "󰤄",
    },
  },
  "systemd-failed-units": {
    "format": "<span color='#FF7D90'>  {nr_failed_system}/{nr_failed_user}</span>",
    "hide-on-ok": true,
    "system": true,
    "user": true,
    "on-click": "zsh -c 'rofi-systemd -f'",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "  {volume}%",
    "format-icons": {
      "headphone": " ",
      "hands-free": " ",
      "headset": " ",
      "default": [" ", " ", " ", " ", " ", " "],
    },
    "on-click": "zsh -c 'niri-tools scratchpad toggle volume'",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
  },
  "mpris": {
    "format": "{artist} {status_icon} {title}",
    "tooltip-format": "Artist  {artist}\nAlbum   {album}\nTrack   {title}\n\n{status_icon} {position}/{length}",
    "tooltip": true,
    "status-icons": {
      "playing": "▶",
      "paused": "⏸",
    },
    "title-len": 40,
    "artist-len": 20,
    "interval": 1,
    "on-click": "zsh -c 'niri-tools scratchpad toggle music'",
    "on-click-right": "playerctl play-pause",
    "on-click-back": "playerctl previous",
    "on-click-forward": "playerctl next",
  },
  "custom/linear": {
    "exec": "zsh -c 'bun run --cwd ~/proj/linear-tools waybar --webhooks --quiet'",
    "return-type": "json",
    "on-click": "zsh -c 'niri-tools scratchpad toggle web-i'",
    "on-click-right": "zsh -c 'bun run --cwd ~/proj/linear-tools waybar --open'",
    "on-scroll-up": "echo",
    "on-scroll-down": "echo",
    "escape": true,
    "format": "{}",
  },
  "custom/command-center": {
    "exec": "~/.config/waybar/bin/command-center-status.py",
    "return-type": "json",
    "format": "{}",
    "escape": true,
    "tooltip": true,
    "restart-interval": 1,
  },
  "custom/claude-usage": {
    "exec": "~/.config/waybar/bin/claude-usage.py",
    "return-type": "json",
    "format": "{}",
    "escape": false,
    "tooltip": true,
    "restart-interval": 1,
    "states": {
      "warning": 80,
      "critical": 95,
    },
    "on-click": "~/.config/waybar/bin/claude-usage.py --cycle-mode-up",
    "menu": "on-click-right",
    "menu-file": "~/.config/waybar/menu/claude-usage.xml",
    "menu-actions": {
      "mode-compact": "~/.config/waybar/bin/claude-usage.py --set-mode-compact",
      "mode-normal": "~/.config/waybar/bin/claude-usage.py --set-mode-normal",
      "mode-expanded": "~/.config/waybar/bin/claude-usage.py --set-mode-expanded",
      "prefer-cc": "~/.config/waybar/bin/claude-usage.py --set-prefer-cc",
      "prefer-oc": "~/.config/waybar/bin/claude-usage.py --set-prefer-oc",
      "prefer-auto": "~/.config/waybar/bin/claude-usage.py --set-prefer-auto",
      "charts-cycle": "~/.config/waybar/bin/claude-usage.py --set-charts-cycle",
      "charts-stacked": "~/.config/waybar/bin/claude-usage.py --set-charts-stacked",
      "refresh": "~/.config/waybar/bin/claude-usage.py --refresh",
      "open-usage": "xdg-open https://claude.ai/settings/usage",
    },
  },
  "bluetooth": {
    "tooltip": true,
    "format-disabled": "",
    "format-off": "",
    "format-on": "",
    "format-no-controller": "",
    "format-connected": "󰂯",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\t{num_connections} device(s)\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
  },
  "custom/mullvad": {
    "exec": "~/.config/waybar/bin/mullvad-status.py",
    "on-click": "~/.config/waybar/bin/mullvad-status.py --show-menu",
    "return-type": "json",
    "format": "{}",
    "escape": true,
    "tooltip": true,
    "restart-interval": 1,
    "menu": "on-click-right",
    "menu-file": "~/.config/waybar/menu/mullvad-status.xml",
    "menu-actions": {
      "approve-all": "~/.config/waybar/bin/mullvad-status.py --approve-all",
      "unapprove-all": "~/.config/waybar/bin/mullvad-status.py --unapprove-all",
      "show-menu": "~/.config/waybar/bin/mullvad-status.py --show-menu",
      "check-web": "xdg-open https://mullvad.net/check/",
    },
  },
  "custom/sun-times": {
    "exec": "~/.config/waybar/bin/sun-times.py --location PDX",
    "return-type": "json",
    "format": "{}",
    "escape": false,
    "tooltip": true,
    "restart-interval": 1,
  },
}
