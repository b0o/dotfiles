{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "lavi",
  "keybinds": {
    "leader": "ctrl+x,û", // û is ctrl+.
    "app_exit": "！", // ctrl+shift+q
    "editor_open": "<leader>e,<leader>ctrl+e,ctrl+g",
    "theme_list": "none",
    "sidebar_toggle": "ò", // alt+shift+\
    "username_toggle": "none",
    "status_view": "<leader>s,<leader>ctrl+s",
    "session_export": "none",
    "session_new": "<leader>n,<leader>ctrl+n",
    "session_list": "<leader>l,<leader>ctrl+l",
    "session_timeline": "<leader>g,<leader>ctrl+g",
    "session_share": "none",
    "session_unshare": "none",
    "session_interrupt": "escape",
    "session_compact": "<leader>shift+c,<leader>ctrl+shift+c",
    "session_child_cycle": "<leader>+right,<leader>ctrl+right",
    "session_child_cycle_reverse": "<leader>+left,<leader>ctrl+left",
    "messages_page_up": "pageup",
    "messages_page_down": "pagedown",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_first": "<leader>0,<leader>ctrl+0,home",
    "messages_last": "<leader>shift+g,<leader>ctrl+shift+g,end",
    "messages_copy": "<leader>y,<leader>ctrl+y",
    "messages_undo": "<leader>u,<leader>ctrl+u",
    "messages_redo": "<leader>r,<leader>ctrl+r",
    "messages_last_user": "none",
    "messages_toggle_conceal": "<leader>h,<leader>ctrl+h",
    "model_list": "<leader>m,<leader>ctrl+m",
    "model_cycle_recent": "none",
    "model_cycle_recent_reverse": "none",
    "command_list": "ctrl+o",
    "agent_list": "<leader>a,<leader>ctrl+a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "<leader>c,<leader>ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter",
    "history_previous": "shift+f1", // ctrl+shift+p
    "history_next": "shift+f2", // ctrl+shift+n
    "tool_details": "<leader>d,<leader>ctrl+d",
    "terminal_suspend": "none",
    "messages_next": "none",
    "messages_previous": "none",
    "messages_line_up": "Ò", // ctrl+shift+k TODO: Not working
    "messages_line_down": "Ñ", // ctrl+shift+j TODO: Not working
    "variant_cycle": "ctrl+t",
    "session_rename": "<leader>n,<leader>ctrl+n",
    "model_cycle_favorite": "<leader>tab",
    "model_cycle_favorite_reverse": "<leader>shift+tab",
  },
  "model": "anthropic/claude-opus-4-5",
  "lsp": {
    "pyright": {
      "disabled": true,
    },
    "basedpyright": {
      "command": ["basedpyright-langserver", "--stdio"],
      "extensions": [".py", ".pyi"],
      "disabled": true,
    },
    "ty": {
      "command": ["uvx", "ty", "server"],
      "extensions": [".py", ".pyi"],
    },
    "nil_ls": {
      "command": ["nil"],
      "extensions": [".nix"],
    },
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
    },
  },
  "compaction": {
    "auto": false,
    "prune": true,
  },
  "plugin": [
    "opencode-anthropic-auth@latest",
  ],
}
